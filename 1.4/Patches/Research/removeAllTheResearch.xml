<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Harkon.GunNut.CORE</modId>
        <key>removeAllTheResearch</key>
        <!--By default, apply the patch-->
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationSequence">
                <operations>

                    <li Class="PatchOperationRemove">
                        <xpath>/Defs/ResearchProjectDef[defName="HRK_Research_GunNut"]</xpath>
                    </li>

                    <li Class="PatchOperationRemove">
                        <xpath>/Defs/ResearchTabDef[defName="HRK_ResearchTab_GunNut"]</xpath>
                    </li>

                </operations>
            </Operation>
        </caseTrue>
    </Operation>

</Patch>