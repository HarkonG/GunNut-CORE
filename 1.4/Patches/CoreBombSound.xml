<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Harkon.GunNut.CORE</modId>
        <key>replaceCoreBombSound</key>        
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationReplace">
                <xpath>/Defs/DamageDef[defName="Bomb"]/soundExplosion</xpath>
                <value>
                    <soundExplosion>HRK_SFX_Bomb</soundExplosion>
                </value>
            </Operation>
        </caseTrue>
    </Operation>
</Patch>