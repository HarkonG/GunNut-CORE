<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>HRK_settings_GunNutCORE</defName>
        <modId>Harkon.GunNut.CORE</modId>
        <label>Gun Nut - CORE</label>
        <settings>

            <li Class="XmlExtensions.Setting.Text">
                <text>Gun Nut - CORE</text>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>REALISTIC FIREARM LABELS</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleCORENames</key>
                <label>Vanilla firearms</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleCENames</key>
                <label>Combat Extended</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleVWENames</key>
                <label>Vanilla Weapons Expanded</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleVWEFNames</key>
                <label>Vanilla Weapons Expanded - Frontier</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleVWEQNames</key>
                <label>Vanilla Weapons Expanded - Quickdraw</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>toggleVFESNames</key>
                <label>Vanilla Factions Expanded - Settlers</label>
                <defaultValue>true</defaultValue>
            </li>

            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>

            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>MISC SETTINGS</text>
                <anchor>Middle</anchor>
            </li>

            <li Class="XmlExtensions.Setting.Checkbox">
                <key>replaceCoreBombSound</key>
                <label>Use new "bomb" explosion sound</label>
                <defaultValue>false</defaultValue>
            </li>

        </settings>
    </XmlExtensions.SettingsMenuDef>

</Defs>